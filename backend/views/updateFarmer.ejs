<h1>Edit</h1>
<form action="/farmer/update" method="POST">
  <div>
    <label for="firstname">firstname</label>
    <input type="text" id="firstname" name="firstname" value=<%=farmer.firstname %> required>
  </div>
  <div>
    <label for="lastname">lastname</label>
    <input type="text" id="lastname" name="lastname" value=<%=farmer.lastname %> required>
  </div>
  <div>
    <label for="female">Female</label>
    <input type="radio" id="female" name="gender" value="female" checked=<%= (farmer.gender == 'female') ? 'checked' : '' ;%> >
    <label for="male">Male</label>
    <input type="radio" id="male" name="gender" value="male" checked=<%= (farmer.gender == 'male') ? 'checked' : '' ;%>>
  </div>
  <div>
    <label for="dob">Date of birth</label>
    <input type="date" id="dob" name="dob" value=<%=farmer.dob.toISOString().split('T')[0] %> required>
  </div>
  <div>
    <label for="mobile">mobile</label>
    <input type="number" id="mobile" name="mobile" value=<%=farmer.mobile %> required>
  </div>
  <div>
    <label for="address">address</label>
    <input type="text" id="address" name="address" value=<%=farmer.address %> required>
  </div>
  <div>
    <label for="nid">nid</label>
    <input type="text" id="nid" name="nid" value=<%=farmer.nid_img_path %> required>
  </div>
  <div>
    <label for="pfp">pfp</label>
    <input type="text" id="pfp" name="pfp" value=<%=farmer.pfp_img_path %> required>
  </div>
  <div>
    <label for="email">email</label>
    <input type="email" id="email" name="email" value=<%=farmer.email %> required>
  </div>
  <div>
    <label for="password">password</label>
    <input type="password" id="password" name="password">
  </div>
  <button type="submit">Done</button>
</form>

<form action="/farmer" method="GET">
    <button type="submit">Cancel</button>
</form>